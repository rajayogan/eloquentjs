function countBs(s) {
  var counter = 0;
  var result = 0;
  while(counter < s.length) {
    if(s.charAt(counter) == 'B') 
      result +=1;
    counter += 1;
  }
  return result;
}

function countChar(s, c) {
  var counter = 0;
  var result = 0;
  while (counter < s.length) {
    if(s.charAt(counter) == c)
      result += 1;
    counter += 1;
  }
  return result;
}
